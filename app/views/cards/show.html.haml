#card{:title => "Card ##{@card.number}"}
  %h3.title= @card.title
  %ul{:class => (@card.spell? ? 'spell' : 'numbers')}
    %li.summoning_cost= @card.summoning_cost
    - unless @card.spell?
      %li.activation_cost= @card.activation_cost
      %li.health_points= @card.health_points
      %li.attack= @card.attack
  %p.creature= image_tag "creatures/#{@card.number}.png", :width => "150px"
  %span.element{:class => (@card.element.blank? ? 'none' : @card.element.downcase)}= @card.element
  %p.title.clear== #{@card.element} - #{@card.rarity}
  .directions= directions(@card) unless @card.spell?

  %p.description
    - unless @card.affiliation.blank?
      == <br/> #{@card.affiliation}
    - unless @card.special_attributes.blank?
      == <br/> #{@card.special_attributes}
    - unless @card.body.blank?
      == <br/> #{@card.body}

  %p= image_tag "http://www.eojmanager.com/cardimagessmall/#{@card.number}.jpg"